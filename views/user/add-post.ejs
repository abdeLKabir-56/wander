<div class="admin-title">
  <h2>Add New Post</h2>
</div>

<form action="/add-post" method="POST" enctype="multipart/form-data">

  <label for="title"><b>Title</b></label>
  <input type="text" id="title" placeholder="Post Title" name="title" required>

  <label for="body"><b>Content</b></label>
  <textarea id="body" name="body" cols="50" rows="10" required></textarea>

  <label for="image"><b>Upload Image</b></label>
  <input type="file" id="image" name="image" accept="image/*">
  <br>
  <label for="categorie"><b>in witch categorie ? </b></label>
  <input type="text" id="categorie" placeholder="Post Categories" name="categorie" >

  <input type="submit" value="Add" class="btn">
</form>
